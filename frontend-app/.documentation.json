{
  "opts": {
    "destination": "docs/jsdoc",
    "recurse": true,
    "readme": "README.md"
  },
  "source": {
    "include": [
      "src/"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "src/**/__tests__/",
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx",
      "src/**/*.d.ts",
      "src/**/node_modules/**",
      "src/**/.next/**",
      "src/**/build/**",
      "src/**/dist/**"
    ],
    "includePattern": "\\.(js|ts|tsx)$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true
    },
    "applicationName": "Media Alternatives",
    "meta": {
      "title": "Media Alternatives - API Documentation",
      "description": "JSDoc documentation for Media Alternatives Next.js application",
      "keyword": "media, alternatives, wordpress, nextjs, react"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idPrefix": "doc-",
    "showdown": {
      "ghCodeBlocks": true,
      "tables": true
    }
  }
}